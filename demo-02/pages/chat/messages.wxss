/* pages/demo1/one1.wxss */
page{
    height: 100%;
}
.scrheight{
    display: block;
    width: 100%;
    height: 91%;
    margin-right: 20px;
    background:#ebebeb;
}
.left-view{
    float: left;
}
.right-view{
    float: right;
}
.left-img{
    margin-right: 6rpx;
}
.right-img{
    margin-left: 6rpx;
}
.triangle{
    margin-top: 42rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-bottom: 4px solid transparent;
}
.left-Triangle{
    border-right:  6px solid #fff;
}
.right-Triangle{
    border-left: 6px solid #5bcd20;
}
.message{
    margin-top: 24rpx;
    border-radius: 6rpx;
    font-size: 14px;
    letter-spacing: 1px;
    max-width: 80%;
    padding: 10rpx;
    height: auto;
}
.message p{
    width: 100%;
    height: auto;
    word-break: break-all;
}
.left-message{
    background: #fff;
}
.right-message{
    background: #5bcd20;
}
.wa-row{
    background:#f5f5f7;
    overflow-x: hidden;
    height:9%;
    width: 100%;
    position: fixed;
    bottom: 0;
}
.wa-row view{
    height: 100%;
}
.text-view{
    float: left;
    width: 490rpx;
    position: relative;
}
.textStyle{
    width: 490rpx;
    height: 56rpx;
    border: none;
    bottom: 14rpx;
    position: absolute;
    font-size:14px;
    background:#f5f5f7;
    border-bottom: 1rpx solid #ccc;
    font-family:microsoft yahei;
}
.add_biaoqing{
    margin-left: 18px;
}
.right-view{
    height: auto;
}
.add_value{
    width: 130rpx;
    height: 100%;
    line-height: 100%;
    text-align: center;
    position: relative;
}
.add_value image{
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    left: 50%;
    margin-left: -35rpx;
    bottom: 10rpx;
}
.btn{
    width: 110rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 12px;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}
.isfrom{
    width: 100%;
    height: 100%;
}
.isfrom .left-view{
    position: relative;
    width: 100rpx;
    height: 100%;
}
.imageStyle{
    width: 70rpx;
    height: 70rpx;
}
.auido{
    position: absolute;
    left: 50%;
    bottom: 10rpx;
    margin-left: -35rpx;
}
@media screen and (max-width: 330px) {
    .btn{
        font-size: 8px;
    }
}





